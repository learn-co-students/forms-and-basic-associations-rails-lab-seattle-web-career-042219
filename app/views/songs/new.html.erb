<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <%=f.label :artist_name, "Artist Name"%>
  <%=f.text_field :artist_name, list: 'artist-name' %>
<datalist id="artist-name">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>


  <%=f.label :genre_id%>
  <%=f.collection_select :genre_id, Genre.all, :id, :name, prompt: :true%>
  <br />


    <%= f.label :note %><br>
      <input name='song[note_contents][]' id='song_notes_1'><br>
      <input name='song[note_contents][]' id='song_notes_2'><br>
     <br />
  <%= f.submit %>
<% end %>
